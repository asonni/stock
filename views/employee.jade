extends layout
block content
  .row-md-12    
    .col-md-10
      .col-md-offset-3    
        .panel.panel-default
          // Default panel contents
          .col-md-12
            .panel-heading.clearfix
              .input-group.panel-title.pull-right.col-md-6
                input.form-control(type="text",name="idstock",id = "idstock")
                .input-group-btn
                  .btn.btn-default(type="button")  
                    spen.glyphicon.glyphicon-search
              .btn-group.pull-left
                a.btn.btn-success(href='/Employee/addEmployee', role='button',data-toggle='modal') إضافة موضف
                  span.glyphicon.glyphicon-plus 
            .panel-body
              table-responsive  
                table#off.table.table-striped.table-bordered.table-condensed.table-hover
                  thead
                    th(width='10%')  أسم الموظف
                    th(width='4%') البريد الاكتروني
                    th(width='4%') رقم الهاتف
                    th(width='3%') الصﻻحية
                    th(width='3%') القسم
                    th تعديل
                    th مسح
                  tbody#employee                
                    for e in emp
                      tr
                        td #{e.empname}
                        td #{e.email}
                        td #{e.phoneNumber}    
                        if e.level == 1
                          td  root
                        else if e.level == 2
                          td admin
                        else if e.level == 3
                          td user    

                        td #{e.dname}
                        td
                          a#viw.btn.btn-primary.btn-xs(href="/employee/editEmployee/#{e.idemployee}") 
                            span.glyphicon.glyphicon-floppy-saved
                        td
                           button#dlte.btn.btn-danger.btn-xs(href='#del', data-toggle='modal',value="#{e.idemployee}")
                            span.glyphicon.glyphicon-trash 
              #del.modal.fade(data-width='760',role="dialog",aria-labelledby="myModalLabel", tabindex='-1',aria-hidden="true")
                .modal-dialog
                  .modal-content
                    .modal-headr.modal-header-danger
                      p.h1 هل أنت متأكد من  حدف ؟
                    .modal-body
                      p.h2 هل انت متأكد 
                      p 
                    .modal-footer
                      button#confdlte.btn.btn-danger(type='button',data-dismiss='modal') حدف
                      button.btn.btn-success(data-dismiss='modal', type='button') إلغاء              
  script(src='/javascripts/jquery-1.11.1.min.js')    
  script(src='/javascripts/bootstrap.min.js')
  script(src='/javascripts/employee.js')
